<% include ./partials/header %>
<div class = "ui main text container segment">
    <div class = "ui large header">New Blog</div>
    <form class = "ui inverted form"action="/blogs" method="POST">
        <div class = "field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Blog Title">
        </div>
        <div class = "field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="Image Url">
        </div>
        <div class = "field">
            <label>Blog Content</label>
            <textarea name="blog[body]" placeholder="Write your blog post here"></textarea>
        </div>
        
        <input class = "ui inverted teal big basic button" type="submit">
    </form>
</div>
<% include ./partials/footer %>
