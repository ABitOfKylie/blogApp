<% include ./partials/header %>

<div class = "ui main text container">
    <!--<div class = "ui huge header">RESTful Blog App</div>-->
    <h2 class="ui header">
        <div class="content">
        <i class="Comment icon"></i> Thoughtful Blogs Using RESTful Programming
         </div>
    </h2>
    <div class = "ui top attached segment 2">
        <div class = "ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image %>">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%=blog._id %>"> <%=blog.title%> </a>
                        <div class="meta">
                             <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                             <p><%- blog.body.substring(0,100)%>...</p>
                        </div>
                        <div class="extra">
                            <a  class="ui floated basic black button" href="/blogs/<%=blog._id %>">
                                Read More
                                <i class="angle double right icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
            </div>
        </div>
</div>

